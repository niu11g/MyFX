/* pages/search/search.wxss */
Page{
    background-color: #ffffff;
}

.input{
    border-radius:0 !important;
}

.header{
    background-color: #ffffff;
    border-bottom: 1px solid #f3f3f3;
    padding-bottom: 14rpx;
    position: fixed;
    z-index: 77;
    width: 750rpx;
    top: 0;
}

.container{
    padding-top:70rpx;
}

.history-container{
    display: flex;
    flex-direction: column;
}

.slide{
    width: 8rpx;
    height: 46rpx;
    background-color: #157658;
    margin-right: 22rpx;
}

.history-title{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 38rpx;
}
/*>是直接子代，空格表示所有子代包含子代的子代*/
.history-title > text{
    font-size: 28rpx;
    color: #333333;
}

.tag{
    background-color: #f3f3f3 !important;
    color: #666666 !important;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.history-tags{
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-top: 20rpx;
    padding-left: 30rpx;
    flex-wrap: wrap;
}

.tag-selected{
    background-color: #dcebe6 !important;
    color: #157658 !important;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.spu-bottom{
    box-sizing: border-box;
    width: 100%;
    padding-top:18rpx;
    padding-left: 18rpx;
    padding-right: 18rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
}
