.icons text{
  font-size: 20rpx;
}

.icons > view:first-child{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icons > view:nth-child(2){
  padding-top:6rpx;
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn-font{
  color:#ffffff;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.buy{
  background-color: #157658;
  width: 260rpx;
  height: 100%;
}

.cart{
  background-color: #333333;
  width: 260rpx;
  height: 100%;
}
