.container{
    height: 100rpx;
    width:100%;
    display: flex;
    flex-direction: row;
    background-color: #ffffff;
}

.icons{
    box-sizing: border-box;
    padding-left: 16rpx;
    padding-right: 22rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    width: 230rpx;
    height: 100%;
    color: #999999;
}

